                     <lb/>
                     <signed>
                        <persName>
                           <forename ref="Massimo">Massimo</forename>
                        </persName>
                     </signed>
                  </s>
               </closer>
            </div>
            <div type="address-destination">
               <p>
                  <address>
                     <addrLine>
                        <lb/>            Tenente<lb/>            Coliola Giovanni<lb/>            Via Monti<lb/>            N 4 <lb/>            Moena?</addrLine>
                  </address>
               </p>
            </div>
            <div type="postmark-postage">
